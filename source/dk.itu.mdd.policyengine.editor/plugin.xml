<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<!--
-->

<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="dk.itu.mdd.PolicyEngine.presentation.PolicyEngineModelWizardID"
            name="%_UI_PolicyEngineModelWizard_label"
            class="dk.itu.mdd.PolicyEngine.presentation.PolicyEngineModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/PolicyEngineModelFile.gif">
         <description>%_UI_PolicyEngineModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="dk.itu.mdd.PolicyEngine.presentation.PolicyEngineEditorID"
            name="%_UI_PolicyEngineEditor_label"
            icon="icons/full/obj16/PolicyEngineModelFile.gif"
            extensions="policyengine"
            class="dk.itu.mdd.PolicyEngine.presentation.PolicyEngineEditor"
            contributorClass="dk.itu.mdd.PolicyEngine.presentation.PolicyEngineActionBarContributor">
      </editor>
   </extension>

</plugin>
